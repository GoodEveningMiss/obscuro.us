<%= f.fields_for :ideas do |idea_form| %>
  <div class="form-group">
    <%= idea_form.label :list_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= idea_form.number_field :list_id, :value => @list.id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= idea_form.label :body, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= idea_form.text_area :body, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= idea_form.label :due_date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= idea_form.date_select :due_date, :include_blank => true, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= idea_form.label :completion_status, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= idea_form.check_box :completion_status, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= idea_form.label :votes, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= idea_form.number_field :votes, :class => "form-control" %>
    </div>
  </div>
  <div class='text-center'>
    <%= idea_form.link_to_remove "Remove this idea" %>
  </div>
<% end %>