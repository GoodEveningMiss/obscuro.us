<div class="panel panel-default">
  <div class="panel-body">
    <div class="panel-heading">Idea</div>
    <div class="form-group">
      <%= f.label :list_id, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :list_id, :value => @list.id, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :body, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :body, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :due_date, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.date_select :due_date, :include_blank => true, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :completion_status, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.check_box :completion_status, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :votes, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :votes, :class => "form-control" %>
      </div>
    </div>
    <div class='text-center'>
      <%= f.link_to_remove "Remove this idea" %>
    </div>
  </div>
</div>