<div class="page-header">
  <%= link_to new_list_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New List
  <% end %>
  <h1>Listing lists</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Url</th>
        <th>Description</th>
        <th colspan=3>Actions</th>
      </tr>
    </thead>
    <tbody>
      <%= content_tag_for(:tr, @lists) do |list| %>
        <td><%= list.name %></td>
        <td><%= list.url %></td>
        <td><%= list.description %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>