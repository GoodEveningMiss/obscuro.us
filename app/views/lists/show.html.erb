<div class="page-header">
  <% if can? :index, Lists %>
    <%= link_to lists_path, :class => 'btn btn-default' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Back
    <% end %>
  <% end %>
  <% if can? :edit, @list %>
    <%= link_to edit_list_path(@list.url), :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-pencil"></span>
      Edit
    <% end %>
  <% end %>
  <h1>List <% if current_user.role == 'admin' %><%= @list.id %>:<% end %> <%= @list.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Url:</dt>
  <dd><%= @list.url %></dd>

  <dt>Description:</dt>
  <dd><%= @list.description %></dd>

  <dt>Owner:</dt>
  <dd><% if @list.user %><%= @list.user.name || 'Unnamed User' %><% else %>Anonymous<% end %></dd>
</dl>
