<div class="page-header">
  <%= link_to new_idea_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Idea
  <% end %>
  <h1>Listing ideas</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>List ID</th>
        <th>Body</th>
        <th>Due date</th>
        <th>Completion status</th>
        <th>Votes</th>
        <th colspan=3>Actions</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @ideas) do |idea| %>
        <td><%= idea.id %><td>
        <td><%= idea.list_id %><td>
        <td><%= idea.body %></td>
        <td><%= idea.due_date %></td>
        <td><%= idea.completion_status %></td>
        <td><%= idea.votes %></td>
        <td><%= link_to 'Show', idea %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
        <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
