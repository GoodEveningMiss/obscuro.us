<%= form_for(@idea, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @idea.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@idea.errors.count, "error") %> prohibited this idea from being saved:</h4>

      <ul>
      <% @idea.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :list_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :list_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :body, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :due_date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :due_date, :include_blank => true, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :completion_status, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :completion_status, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :votes, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :votes, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
